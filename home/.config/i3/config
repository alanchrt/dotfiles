# .i3/config - Alan Christopher Thomas
# http://alanct.com/

# Modifier (Win)
set $mod Mod4

# Borders
new_window pixel 3
new_float normal

# Font
font pango:Ubuntu 12

# Software
bindsym $mod+space exec --no-startup-id rofi -show run -lines 3 -opacity 90 -fg "#f1f1f1" -bg "#333333" -hlfg "#ffffff" -hlbg "#336699"
bindsym $mod+o exec --no-startup-id rofi -show window -opacity 90 -fg "#f1f1f1" -bg "#333333" -hlfg "#ffffff" -hlbg "#336699"
bindsym $mod+i exec --no-startup-id rofi -show ssh -opacity 90 -fg "#f1f1f1" -bg "#333333" -hlfg "#ffffff" -hlbg "#336699"
bindsym $mod+Return exec --no-startup-id i3-sensible-terminal
bindsym $mod+Shift+f exec --no-startup-id pcmanfm
bindsym $mod+Shift+s exec --no-startup-id gnome-screenshot -i
bindsym $mod+Shift+p exec --no-startup-id gnome-system-monitor

# State
bindsym $mod+Shift+q kill
bindsym $mod+Shift+grave floating toggle
bindsym $mod+equal border normal
bindsym $mod+minus border 1pixel

# Focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
bindsym $mod+grave focus mode_toggle

# Move
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# Resize
bindsym $mod+r mode "RESIZE"
mode "RESIZE" {
    bindsym l resize shrink left 10 px or 10 ppt
    bindsym Shift+H resize grow left 10 px or 10 ppt
    bindsym k resize shrink down 10 px or 10 ppt
    bindsym Shift+J resize grow down 10 px or 10 ppt
    bindsym j resize shrink up 10 px or 10 ppt
    bindsym Shift+K resize grow up 10 px or 10 ppt
    bindsym h resize shrink right 10 px or 10 ppt
    bindsym Shift+L resize grow right 10 px or 10 ppt
    bindsym Escape mode "default"
}

# Layout
bindsym $mod+s layout stacking
bindsym $mod+d layout default

# Workspaces
bindsym $mod+comma exec --no-startup-id python ~/.config/i3/workspaceonoutput.py workspace prev
bindsym $mod+period exec --no-startup-id python ~/.config/i3/workspaceonoutput.py workspace next
bindsym $mod+Control+comma move workspace to output left
bindsym $mod+Control+period move workspace to output right
bindsym $mod+1 workspace 1
bindsym $mod+2 workspace 2
bindsym $mod+3 workspace 3
bindsym $mod+4 workspace 4
bindsym $mod+5 workspace 5
bindsym $mod+6 workspace 6
bindsym $mod+7 workspace 7
bindsym $mod+8 workspace 8
bindsym $mod+9 workspace 9
bindsym $mod+0 workspace 10
bindsym $mod+Escape move scratchpad
bindsym $mod+Tab scratchpad show

# Move to workspace
bindsym $mod+Shift+1 move container to workspace 1
bindsym $mod+Shift+2 move container to workspace 2
bindsym $mod+Shift+3 move container to workspace 3
bindsym $mod+Shift+4 move container to workspace 4
bindsym $mod+Shift+5 move container to workspace 5
bindsym $mod+Shift+6 move container to workspace 6
bindsym $mod+Shift+7 move container to workspace 7
bindsym $mod+Shift+8 move container to workspace 8
bindsym $mod+Shift+9 move container to workspace 9
bindsym $mod+Shift+0 move container to workspace 10
bindsym $mod+Shift+comma exec --no-startup-id python ~/.config/i3/workspaceonoutput.py move prev
bindsym $mod+Shift+period exec --no-startup-id python ~/.config/i3/workspaceonoutput.py move next

# i3 control
bindsym $mod+Control+i restart
bindsym $mod+Control+Up exec --no-startup-id slock
bindsym $mod+Control+Down exec --no-startup-id "zenity --question --title='System shut down' --text='Do you really want to shut down your machine?' && sudo poweroff"
bindsym $mod+Control+Right exec --no-startup-id "zenity --question --title='System reboot' --text='Do you really want to reboot your machine?' && sudo reboot"

# Multimedia
bindsym XF86AudioRaiseVolume exec --no-startup-id amixer -D pulse set Master 1+ unmute && amixer -D pulse sset Master 5%+ && killall -SIGUSR1 i3status
bindsym XF86AudioLowerVolume exec --no-startup-id amixer -D pulse sset Master 5%- && killall -SIGUSR1 i3status
bindsym XF86AudioMute exec --no-startup-id amixer -D pulse set Master 1+ toggle
bindsym XF86AudioPlay exec --no-startup-id dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.PlayPause
bindsym XF86AudioStop exec --no-startup-id dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Stop
bindsym XF86AudioPrev exec --no-startup-id dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Previous
bindsym XF86AudioNext exec --no-startup-id dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Next

# Brigtness, WARNING raw values might be macbook-specific
bindsym XF86MonBrightnessUp exec --no-startup-id light -r -A 20
bindsym XF86MonBrightnessDown exec --no-startup-id light -r -U 20

# Workspace bar
bar {
    status_command i3blocks -c ~/.config/i3/i3blocks.conf

    colors {
        background #222222
    }
}

# Startup scripts
exec --no-startup-id compton --config ~/.config/compton.conf
# TODO: setpci needs to be root
exec --no-startup-id sudo setpci -v -H1 -s 00:01.00 BRIDGE_CONTROL=0 && light -r -S 1000  # enable backlight, WARNING macbook-specific
exec --no-startup-id gnome-settings-daemon
exec --no-startup-id emacs --daemon
exec --no-startup-id xautolock -time 3 -corners -000 -locker slock
exec --no-startup-id xss-lock -- /usr/bin/slock
exec --no-startup-id unclutter
exec --no-startup-id pcmanfm -d
exec --no-startup-id nm-applet
exec --no-startup-id pasystray
exec --no-startup-id fdpowermon
exec --no-startup-id dropboxd
exec --no-startup-id fluxgui
exec_always --no-startup-id feh --bg-scale /usr/share/backgrounds/Xerus_Wallpaper_Grey_4096x2304.png
exec --no-startup-id ~/.i3_local

# Desktop applications
exec --no-startup-id sleep 3 && firefox -P default
