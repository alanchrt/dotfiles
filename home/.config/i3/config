# .config/i3/config - Alan Christopher Thomas
# http://alanct.com/

# Modifier (Win)
set $mod Mod4
floating_modifier $mod

# Borders
new_window pixel 1
new_float none
hide_edge_borders none
smart_borders on

# Gaps
gaps inner 10
gaps outer -4
smart_gaps on

# Font
font xft:Noto Sans 10

# Menus
set $rofi_colors  -color-window \\"#1a1a1a,#1a1a1a\\" -color-normal \\"#1a1a1a,#f1f1f1,#1a1a1a,#16a085,#ffffff\\"
bindsym $mod+space exec --no-startup-id "rofi -mode drun -show drun -opacity 85 $rofi_colors"
bindsym $mod+e exec --no-startup-id "rofi -show run -lines 5 -opacity 85 $rofi_colors"
bindsym $mod+i exec --no-startup-id "rofi -show ssh -opacity 85 $rofi_colors"

# Software
bindsym $mod+Return exec --no-startup-id termite
bindsym $mod+a exec termite --title='dropterm' --config ~/.config/termite/drop_config
bindsym $mod+Control+f exec --no-startup-id pcmanfm
bindsym $mod+Control+s exec --no-startup-id gnome-screenshot -i
bindsym $mod+Control+n exec termite -e 'emacsclient -t ~/Dropbox/Notes' --title='notes'
bindsym $mod+Control+c exec termite -e 'qalc' --title='qalc'  --config ~/.config/termite/drop_config
bindsym $mod+Control+m exec termite -e 'alsamixer' --title='alsamixer'

# Indicators
bindsym --release Caps_Lock exec pkill -SIGRTMIN+11 i3blocks

# Floating windows
for_window [title="dropterm"] floating enable, sticky enable, border none, resize set 800 260, move absolute position 0 0
for_window [title="notes"] floating enable
for_window [title="qalc"] floating enable, border none, resize set 800 120, move position center
for_window [title="alsamixer"] floating enable

# State
bindsym $mod+Shift+q kill
bindsym $mod+Shift+grave floating toggle
bindsym $mod+equal border normal
bindsym $mod+minus border 1pixel

# Focus
focus_follows_mouse no
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
bindsym $mod+grave focus mode_toggle

# Move
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# Resize
bindsym $mod+r mode "RESIZE"
mode "RESIZE" {
    bindsym l resize shrink left 10 px or 10 ppt
    bindsym Shift+H resize grow left 10 px or 10 ppt
    bindsym k resize shrink down 10 px or 10 ppt
    bindsym Shift+J resize grow down 10 px or 10 ppt
    bindsym j resize shrink up 10 px or 10 ppt
    bindsym Shift+K resize grow up 10 px or 10 ppt
    bindsym h resize shrink right 10 px or 10 ppt
    bindsym Shift+L resize grow right 10 px or 10 ppt
    bindsym Escape mode "default"
}

# Layout
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+d layout default

# Colors
#               border  bg      text
client.focused  #2AA198 #16A085 #F9FAF9

# Workspaces
workspace_auto_back_and_forth yes
bindsym $mod+b workspace back_and_forth
bindsym $mod+Shift+b move container to workspace back_and_forth; workspace back_and_forth
bindsym $mod+comma exec --no-startup-id python ~/.config/i3/workspaceonoutput.py workspace prev
bindsym $mod+period exec --no-startup-id python ~/.config/i3/workspaceonoutput.py workspace next
bindsym $mod+Control+comma move workspace to output left
bindsym $mod+Control+period move workspace to output right
bindsym $mod+1 workspace 1
bindsym $mod+2 workspace 2
bindsym $mod+3 workspace 3
bindsym $mod+4 workspace 4
bindsym $mod+5 workspace 5
bindsym $mod+6 workspace 6
bindsym $mod+7 workspace 7
bindsym $mod+8 workspace 8
bindsym $mod+9 workspace 9
bindsym $mod+0 workspace 10
bindsym $mod+Escape move scratchpad
bindsym $mod+Tab scratchpad show
bindsym $mod+Shift+t sticky toggle

# Move to workspace
bindsym $mod+Shift+1 move container to workspace 1
bindsym $mod+Shift+2 move container to workspace 2
bindsym $mod+Shift+3 move container to workspace 3
bindsym $mod+Shift+4 move container to workspace 4
bindsym $mod+Shift+5 move container to workspace 5
bindsym $mod+Shift+6 move container to workspace 6
bindsym $mod+Shift+7 move container to workspace 7
bindsym $mod+Shift+8 move container to workspace 8
bindsym $mod+Shift+9 move container to workspace 9
bindsym $mod+Shift+0 move container to workspace 10
bindsym $mod+Shift+comma exec --no-startup-id python ~/.config/i3/workspaceonoutput.py move prev
bindsym $mod+Shift+period exec --no-startup-id python ~/.config/i3/workspaceonoutput.py move next

# i3 control
bindsym $mod+Control+i restart
bindsym $mod+Control+Up exec --no-startup-id blurlock
bindsym $mod+Control+Down mode "$mode_shutdown"
bindsym $mod+Control+Right mode "$mode_reboot"

# Shut down mode
set $mode_shutdown MOD+CTRL+SPACE TO SHUTDOWN
mode "$mode_shutdown" {
    bindsym $mod+Control+space exec --no-startup-id i3exit shutdown, mode "default"
    bindsym n mode "default"
    bindsym Escape mode "default"
    bindsym Return mode "default"
}

# Reboot mode
set $mode_reboot MOD+CTRL+SPACE TO REBOOT
mode "$mode_reboot" {
    bindsym $mod+Control+space exec --no-startup-id i3exit reboot, mode "default"
    bindsym n mode "default"
    bindsym Escape mode "default"
    bindsym Return mode "default"
}

# Multimedia
# bindsym XF86AudioPlay exec --no-startup-id dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.PlayPause
# bindsym XF86AudioStop exec --no-startup-id dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Stop
# bindsym XF86AudioPrev exec --no-startup-id dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Previous
# bindsym XF86AudioNext exec --no-startup-id dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Next

# Workspace bar
bar {
    status_command i3blocks -c ~/.config/i3/i3blocks.conf
    position bottom

    bindsym button4 nop
    bindsym button5 nop
    font xft:Noto Sans 10.5
    strip_workspace_numbers yes

	  colors {
        background #2b2c2b
        statusline #f9faf9
        separator  #454947

        #                  border  bg      text
        focused_workspace  #16a085 #16a085 #eee8d5
        active_workspace   #595b5b #353836 #fdf6e3
        inactive_workspace #353836 #353836 #eee8d5
        urgent_workspace   #900000 #900000 #f9faf9
    }
}

# Startup scripts
exec --no-startup-id /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1
exec --no-startup-id nitrogen --restore; sleep 1; compton -b --config ~/.config/compton.conf
exec --no-startup-id emacs --daemon
exec --no-startup-id nm-applet
exec --no-startup-id xfce4-power-manager
exec --no-startup-id xautolock -time 3 -corners -000 -locker blurlock
exec --no-startup-id unclutter
exec --no-startup-id pcmanfm -d
exec --no-startup-id volumeicon
# exec --no-startup-id dropboxd
exec --no-startup-id fluxgui
exec --no-startup-id ~/.config/i3/prune_downloads.sh
exec_always --no-startup-id fix_xcursor

# Run local scripts
exec --no-startup-id ~/.i3_local

# Desktop applications
exec --no-startup-id firefox-esr
